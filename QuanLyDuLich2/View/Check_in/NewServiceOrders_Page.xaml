<Page x:Class="QuanLyDuLich2.View.NewServiceOrders_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyDuLich2.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="18"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"      
      Title="NewServiceOrders_Page">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding BoxWidth}" MinWidth="300" MaxWidth="900"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="262"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Orientation="Vertical" Margin="0,10">
                <!--Header-->
                <StackPanel Margin="5">
                    <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                                    TextWrapping="WrapWithOverflow" TextAlignment="Center"
                                    > Phiếu dịch vụ</TextBlock>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="124"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto" MinWidth="10"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Bottom" Margin="5">
                        Ngày đăng ký:
                    </TextBlock>
                    <DatePicker Grid.Column="1" materialDesign:HintAssist.Hint="XX-XX-XXXX"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" 
                        Foreground="{StaticResource SecondaryAccentBrush}" 
                        VerticalAlignment="Center"
                                Localization.Attributes=""
                        IsEnabled="{Binding EnableEdit}"
                        FirstDayOfWeek="Monday"
                        SelectedDateFormat="Short" 
                        SelectedDate="{Binding PhieuDichVu.ThoiGian, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,0.5"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="124"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto" MinWidth="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Bottom" Margin="5">
                        Tên khách:
                    </TextBlock>
                    <TextBox Grid.Column="1" materialDesign:HintAssist.Hint="Nguyễn Văn A"
                         
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                         Foreground="{StaticResource SecondaryAccentBrush}" 
                         VerticalAlignment="Center"
                         IsEnabled="{Binding EnableEdit}"
                         Text="{Binding PhieuDichVu.tbKhach.HoTen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                    </TextBox>
                    <Button Grid.Column="2" Style="{StaticResource MaterialDesignFlatButton}" Padding="5,0"
                                        Command="{Binding Open_ContactLayout_Gui}" VerticalAlignment="Bottom"
                                        IsEnabled="{Binding EnableEdit}">
                        <materialDesign:PackIcon Kind="Contact" Height="30" Width="30"/>
                    </Button>
                </Grid>
                <Grid>
                    <!-- Use case: check if guest is renting room -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="124"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto" MinWidth="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Bottom" Margin="5">
                         Phòng:
                    </TextBlock>
                    <TextBox Grid.Column="1" materialDesign:HintAssist.Hint="A-01"
                         
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                         Foreground="{StaticResource SecondaryAccentBrush}" 
                         VerticalAlignment="Center"
                         IsEnabled="False"
                         Text="{Binding Room, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">
                    </TextBox>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="124"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto" MinWidth="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Bottom" Margin="5">
                        Tổng tiền:
                    </TextBlock>
                    <TextBox Grid.Column="1" materialDesign:HintAssist.Hint="200.000₫"
                         IsEnabled="False"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                         Foreground="{StaticResource SecondaryAccentBrush}" 
                         VerticalAlignment="Center"
                         PreviewTextInput="TextBox_PreviewTextInput"
                         Text="{Binding GiaTri, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0}₫, Mode=TwoWay}">
                    </TextBox>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="124"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto" MinWidth="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Bottom" Margin="5">
                         Giảm giá:
                    </TextBlock>
                    <TextBox Grid.Column="1" materialDesign:HintAssist.Hint="50.000₫"
                         
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                         Foreground="{StaticResource SecondaryAccentBrush}" 
                         VerticalAlignment="Center"
                         PreviewTextInput="TextBox_PreviewTextInput"
                         IsEnabled="{Binding EnableEdit}"
                         Text="{Binding PhieuDichVu.GiamGia, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0}₫, Mode=TwoWay}">
                    </TextBox>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="124"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto" MinWidth="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Bottom" Margin="5">
                        Thành tiền:
                    </TextBlock>
                    <TextBox Grid.Column="1" materialDesign:HintAssist.Hint="150.000₫"
                         IsEnabled="False"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                         Foreground="{StaticResource SecondaryAccentBrush}" 
                         VerticalAlignment="Center"
                         PreviewTextInput="TextBox_PreviewTextInput"
                         Text="{Binding PhieuDichVu.ThanhTien, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0}₫, Mode=TwoWay}">
                    </TextBox>
                </Grid>
            </StackPanel>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource MaterialDesignRaisedButton}" 
                            Margin="10" Content="Hủy" Background="{StaticResource WarningHueBrush}"
                            Width="Auto" Height="35" Command="{Binding CancelCommand}"
                            Visibility="{Binding EditVisibility}"/>
                <Button Grid.Column="1" Style="{StaticResource MaterialDesignRaisedButton}" 
                            Margin="5" Content="Phản hồi" Background="{StaticResource PrimaryHueDarkBrush}"
                            Width="Auto" Height="35" Command="{Binding FeedbackCommand}"/>
                <Button Grid.Column="2" Style="{StaticResource MaterialDesignRaisedButton}" 
                            Margin="10" Content="Xác nhận" Background="{StaticResource PrimaryHueDarkBrush}"
                            Width="Auto" Height="35" Command="{Binding ConfirmCommand}"
                            Visibility="{Binding EditVisibility}"/>
            </Grid>
        </Grid>

        <GridSplitter Grid.Column="1" Width="3" Background="{StaticResource PrimaryHueDarkBrush}" HorizontalAlignment="Stretch"/>

        <Grid Grid.Column="2" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0*" MinHeight="50"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*" MinWidth="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" FontWeight="Bold" 
                                       FontSize="18" Margin="5" Text="Dịch vụ"></TextBlock>
                    <TextBlock Grid.Column="1" FontWeight="Bold" 
                                       FontSize="18" Margin="5" Text="Đơn giá"></TextBlock>
                    <TextBlock Grid.Column="2" FontWeight="Bold" 
                                       FontSize="18" Margin="5" Text="Số lượng"></TextBlock>
                    <TextBlock Grid.Column="3" FontWeight="Bold" 
                                       FontSize="18" Margin="5" Text="Thành tiền"></TextBlock>
                </Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="listbox1"
                                Margin="0,20,0,20"
                                materialDesign:ListViewAssist.ListViewItemPadding="10"
                                materialDesign:ListBoxAssist.IsToggle="False"
                                SelectedItem="{Binding SelectedServiceOrderDetail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectionMode="Single"
                                ItemsSource="{Binding dsServiceOrderDetail}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <!--Button Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Stretch" Height="40"-->
                                    <Grid Margin="0, 0, 0, 0" VerticalAlignment="Stretch" 
                                          Width="{Binding ActualWidth, ElementName=listbox1}"
                                          Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*" MinWidth="100"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox ItemsSource="{Binding dsServices}" Grid.Column="0" 
                                                  FontSize="18" Margin="0" SelectedValuePath="Ten" 
                                                  SelectedItem="{Binding tbDichVu, UpdateSourceTrigger=PropertyChanged}">
                                        </ComboBox>
                                        <TextBlock Grid.Column="1" FontSize="18" Margin="0" Text="{Binding DonGia, StringFormat={}{0:N}₫, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                                        <TextBox Grid.Column="2" FontSize="18" Margin="0" Text="{Binding SoLuong, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                        <TextBlock Grid.Column="3" FontSize="18" Margin="0" Text="{Binding ThanhTien, StringFormat={}{0:N}₫}"></TextBlock>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" MinWidth="124"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock FontSize="18" Grid.Column="0" VerticalAlignment="Top" Margin="5,20,5,5">
                                            Yêu cầu khách:
                                        </TextBlock>
                                        <TextBox Grid.Column="1" materialDesign:HintAssist.Hint=""
                                            TextWrapping="Wrap"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                            Foreground="{StaticResource SecondaryAccentBrush}" 
                                            VerticalAlignment="Center"
                                            IsEnabled="{Binding EnableEdit}" FontSize="18"
                                            Text="{Binding YeuCauKhach, Mode=TwoWay}">
                                        </TextBox>
                                    </Grid>
                                </Grid>
                                <!--/Button-->
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource MaterialDesignRaisedButton}" 
                            Margin="10" Content="Xóa yêu cầu dịch vụ" Background="{StaticResource WarningHueBrush}"
                            Width="Auto" Height="35" Command="{Binding DeleteServiceItemCommand}"
                            Visibility="{Binding EditVisibility}"/>
                <Button Grid.Column="1" Style="{StaticResource MaterialDesignRaisedButton}" 
                            Margin="5" Content="Thêm yêu cầu dịch vụ" Background="{StaticResource PrimaryHueDarkBrush}"
                            Width="Auto" Height="35" Command="{Binding AddServiceOrderItemCommand}"
                            Visibility="{Binding EditVisibility}"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
